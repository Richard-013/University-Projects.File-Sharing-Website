<!doctype html>

<html lang="en">

<head>
    <meta charset="utf-8">
    <title>Available Files</title>
    <meta name="description" content="Displays all files available for a user to download">
    <meta name="author" content="Richard Horton">
    <link href="style.css" type="text/css" rel="stylesheet" />
</head>

<body>
    <h1>File Share</h1>
    <h3>Welcome to File Share - File Select Page</h3><br/>
    {{#if message}}
    <p class="msg">{{message}}</p>
    <!-- If a message is passed to the page, display it here -->
    {{/if}}

    {{#each files}}
    <img src="icons/{{this.fileCat}}.png" alt="File Type: {{this.fileCat}} height="50" width="50"/>
    <p><b>File Name:</b> {{this.fileName}}</p>
    <p><b>Uploaded By:</b> {{this.uploader}}</p>
    <p><b>File Type:</b> {{this.fileType}}</p>
    <p><b>File Size:</b> {{this.fileSize}}</p>
    <p><b>Time Until Deleted:</b> {{this.timeTillDelete}} Hours</p>
    <p><b>Uploaded On:</b> {{this.dateUploaded}}</p>
    <a href="{{this.url}}">Download this file</a>
    <br/>
    {{/each}}

    <p><a href="/">Back</a></p>

</html>