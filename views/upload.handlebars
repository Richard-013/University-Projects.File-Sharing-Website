<!doctype html>

<html lang="en">

<head>
    <meta charset="utf-8">
    <title>Home Page</title>
    <meta name="description" content="Form to upload a file">
    <meta name="author" content="Richard Horton">
    <link href="style.css" type="text/css" rel="stylesheet" />
</head>

<body>
    <h1>File Share</h1>
    <h3>Welcome to File Share - Upload Page</h3>
    {{#if message}}
        <p class="msg">{{message}}</p>
        <!-- If a message is passed to the page, display it here -->
    {{/if}}
    <form action="/upload" enctype="multipart/form-data" method="post">
        <p>File:<br /><input type="file" name="filetoupload"></p>
        <input type="submit">
    </form>

    <p><a href="/">Back</a></p>

</html>